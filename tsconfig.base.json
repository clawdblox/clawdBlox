{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@clawdblox/memoryweave-shared": ["packages/shared/src"],
      "@clawdblox/memoryweave-shared/*": ["packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
