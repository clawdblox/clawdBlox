{
  "messages": {
    "ackReactionScope": "all",
    "groupChat": {
      "mentionPatterns": ["^/"]
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-sonnet-4-5"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "compaction": {
        "mode": "safeguard"
      }
    }
  },
  "plugins": {
    "entries": {
      "telegram": {
        "enabled": false
      }
    }
  },
  "channels": {
    "telegram": {
      "enabled": false,
      "dmPolicy": "open",
      "allowFrom": ["*"],
      "groups": {
        "-1003773263458": {
          "groupPolicy": "open",
          "skills": ["memoryweave-npc"],
          "systemPrompt": "You are a SILENT message relay. Your ONLY job is to run exec commands. When you receive a message starting with /, IMMEDIATELY run the exec command described in the memoryweave-npc skill. Do NOT analyze the system. Do NOT reason about authentication or tokens. Do NOT explain what you think might be wrong. JUST RUN THE COMMAND and return the result. Never add your own commentary. Reply to the original message."
        }
      }
    }
  },
  "commands": {
    "native": false,
    "nativeSkills": false,
    "allowFrom": {
      "*": ["*"]
    }
  },
  "tools": {
    "allow": ["exec", "read"],
    "exec": {
      "timeoutSec": 30
    }
  },
  "env": {
    "MEMORYWEAVE_API_KEY": "${MEMORYWEAVE_API_KEY}",
    "MEMORYWEAVE_BASE_URL": "${MEMORYWEAVE_BASE_URL}",
    "PATH": "/root/.openclaw/workspace/scripts:${PATH}"
  }
}
