# ===== MemoryWeave Environment Variables =====

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# PostgreSQL
DATABASE_URL=postgresql://memoryweave:memoryweave_dev@localhost:5432/memoryweave
PG_POOL_MIN=2
PG_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_ACCESS_SECRET=change-me-access-secret-min-32-chars!!
JWT_REFRESH_SECRET=change-me-refresh-secret-min-32-chars!
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (AES-256-GCM for BYOK)
ENCRYPTION_KEY=change-me-32-bytes-hex-encryption-key!!

# Groq AI (default provider â€” can be overridden per project via BYOK)
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_CHAT_MODEL=llama-3.3-70b-versatile
# Embedding model (text-embedding-3-small produces 1536-dim vectors matching pgvector config)
GROQ_EMBED_MODEL=text-embedding-3-small

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_LOGIN_PER_EMAIL=5
RATE_LIMIT_LOGIN_PER_IP=20
RATE_LIMIT_LOGIN_WINDOW_MINUTES=15
RATE_LIMIT_API_PER_KEY=100
RATE_LIMIT_API_WINDOW_MINUTES=1

# WebSocket
WS_AUTH_TIMEOUT_MS=5000
WS_HEARTBEAT_INTERVAL_MS=30000
WS_INACTIVITY_TIMEOUT_MS=300000
WS_MAX_CONNECTIONS_PER_KEY=100
WS_MAX_CONNECTIONS_GLOBAL=10000
WS_MAX_MESSAGE_SIZE_BYTES=16384
WS_MAX_MESSAGES_PER_MINUTE=30

# Memory Decay (cron interval in minutes)
MEMORY_DECAY_INTERVAL_MINUTES=60

# Logging
LOG_LEVEL=info
